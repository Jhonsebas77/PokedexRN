{
  "compilerOptions": {
    "module": "es6",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "lib",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
    "preserveConstEnums": true,
    "allowJs": false,
    "sourceMap": false, 
		"noImplicitReturns": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"declaration": true,
		"removeComments": true,
		"noLib": true,
		"emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
  },
  "filesGlob": [
		"src/**/*.ts",
		"src/**/*.tsx"
	],
	"types": [
		"react",
		"react-native",
		"jest"
	],
  "exclude": [
    "android",
    "ios",
    "lib",
    "node_modules"
  ],
  "compileOnSave": false
}