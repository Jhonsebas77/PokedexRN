{
	"compilerOptions": {
		"target": "es2015",
		"module": "es2015",
		"moduleResolution": "node",
		"jsx": "react",
		"outDir": "lib",
		"rootDir": "src",
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"preserveConstEnums": true,
		"allowJs": false,
		"noImplicitReturns": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"declaration": false,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"lib": [
			"es2017",
			"es6",
			"es7",
			"esnext.asynciterable"
		]
	},
	"filesGlob": [
		"src/**/*.ts",
		"src/**/*.tsx"
	],
	"types": [
		"react",
		"react-native",
		"jest"
	],
	"exclude": [
		"./android",
		"./ios",
		"./lib",
		"./node_modules"
	]
}